<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/my_booked_sport"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/my_booked_venue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sport"
        android:textSize="20dp"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:textColor="@color/CadetBlue"/>

    <TextView
        android:id="@+id/my_booked_venue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/my_booked_sport"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Venue"
        android:textSize="16dp"
        android:paddingLeft="18dp"
        android:paddingTop="16dp" />

    <TextView
        android:id="@+id/my_booked_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/my_booked_venue"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Unit"
        android:textSize="16dp"
        android:paddingLeft="18dp" />

    <TextView
        android:id="@+id/my_booked_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/my_booked_unit"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Date"
        android:textSize="16dp"
        android:paddingLeft="18dp" />

    <TextView
        android:id="@+id/my_booked_hour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingRight="18dp"
        android:text="Hour"
        android:textSize="16dp"
        app:layout_constraintLeft_toRightOf="@id/my_booked_date"
        app:layout_constraintTop_toBottomOf="@id/my_booked_unit" />

    <TextView
        android:id="@+id/cancel_booking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/my_booked_date"
        app:layout_constraintStart_toStartOf="parent"
        android:text="cancel"
        android:textSize="16dp"
        android:paddingLeft="18dp"
        android:textColor="@color/Red"/>
</androidx.constraintlayout.widget.ConstraintLayout>