<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/eventName_hosting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:text="Event name"
        app:layout_constraintBottom_toTopOf="@id/type_hosting"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20dp"
        android:textColor="@color/Blue"/>

    <TextView
        android:id="@+id/type_hosting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingTop="10dp"
        android:text="Sport"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/eventName_hosting"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/time_hosting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingTop="10dp"
        android:text="Date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/type_hosting" />

    <TextView
        android:id="@+id/venue_hosting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:text="Venue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/time_hosting" />

    <TextView
        android:id="@+id/hostID_hosting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HostID"
        android:paddingLeft="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/venue_hosting" />

    <TextView
        android:id="@+id/pax_hosting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="pax"
        android:gravity="right"
        android:paddingRight="16dp"
        app:layout_constraintTop_toBottomOf="@id/venue_hosting"
        app:layout_constraintLeft_toRightOf="@id/hostID_hosting"/>

    <TextView
        android:id="@+id/cancel_ev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:text="cancel"
        android:textColor="@color/Red"
        app:layout_constraintTop_toBottomOf="@id/hostID_hosting"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>